<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nothi.androidlabs.StartActivity">

    <Button
        android:text="@string/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/startListbutton"
        android:textStyle="normal|bold"
        android:background="@android:color/holo_orange_light" />

    <Button
        android:text="WeatherForcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/weatherforcastBt"
        android:textStyle="normal|bold"
        android:background="@drawable/blue_border"

        android:layout_below="@+id/startChatbt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp" />

    <Button
        android:text="ToolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarbutton"
        android:elevation="24dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
       android:background="@drawable/border_good"
        android:layout_alignBaseline="@+id/weatherforcastBt"
        android:layout_alignBottom="@+id/weatherforcastBt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/startListbutton" />

    <Button
        android:text="@string/startChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startChatbt"
        android:textStyle="normal|bold"
        android:background="@drawable/blue_white"
        android:layout_alignBaseline="@+id/startListbutton"
        android:layout_alignBottom="@+id/startListbutton"
        android:layout_alignEnd="@+id/weatherforcastBt"
        android:layout_alignStart="@+id/weatherforcastBt"
        android:textColor="@android:color/background_light" />
</RelativeLayout>